{
  "version": 2,
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "styles.css",
      "use": "@vercel/static"
    },
    {
      "src": "js/**/*.js",
      "use": "@vercel/static"
    },
    {
      "src": "data/**/*.json",
      "use": "@vercel/static"
    },
    {
      "src": "active_incidents.json",
      "use": "@vercel/static"
    },
    {
      "src": "api/cron-scrape.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/scrape.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/scrape-*.js",
      "use": "@vercel/node"
    }
  ],
  "crons": [
    {
      "path": "/api/cron-scrape",
      "schedule": "*/30 * * * * *"
    }
  ],
  "headers": [
    {
      "source": "/data/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=60, s-maxage=60"
        }
      ]
    },
    {
      "source": "/(.*\\.json)",
      "headers": [
        {
          "key": "Cache-Control", 
          "value": "public, max-age=30, s-maxage=30"
        }
      ]
    },
    {
      "source": "/(.*\\.css)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.js)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
